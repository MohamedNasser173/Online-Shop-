@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Products>
@*    @model IEnumerable<Products>
*@   

 @{
        ViewData["Title"] = "Home Page";
    }
    <br /><br />
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4 class="my-0 font-weight-normal">
                            <label style="font-size : 20px ; color : steelblue">@product.Name</label>
                        </h4>
                    </div>
                    <img src="~/@product.Image " alt="Card Image" class="card-img-top imageThumNail" />

                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center ">
                            <label style=" font-size : 20px ; color : #a51313"> <b>@product.Price</b></label>
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn  pull-right btn-outline-info">Details View</a>

                        </div>
                    </div>
                </div>
            </div>
        }


    </div>
<div>
    @Html.PagedListPager(Model,c=>Href("~/Customer/Home/Index?page="+c))
</div>