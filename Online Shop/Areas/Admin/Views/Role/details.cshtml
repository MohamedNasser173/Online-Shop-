@model String
@{
    ViewData["Title"] = "Details";
}
<br />
<h2 class="text-info">Details role</h2>
<form method="post" asp-action="Create">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <h3>@ViewBag.msg</h3>
        <div class="form-group row">

            <div class="col-2">
                <label>Role Name</label>
            </div>
            <div class="col-5">
                <input id="roleName" name="roleName" value="@ViewBag.name " disabled class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <a asp-action="edit" asp-route-id="@ViewBag.id" class="btn btn-info">update role </a>
            <a asp-action="Index" class="btn btn-success">Back to List</a>

        </div>

    </div>

</form>
@section Scripts{
    @{ await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial"); }
}